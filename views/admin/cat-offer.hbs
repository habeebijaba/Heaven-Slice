<link href="/assets/css/bootstrap-2.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="/assets/css/style3.css" rel="stylesheet">
<div class="container-fluid position-relative d-flex p-0" style="background-color: black;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-12 mt-5">
                <div class="container-fluid">
                    <div class="row">
                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"><u>Category offer management</u></p>
                    </div>
                </div>
                <table class="table" id="viewusers">
                    <thead class="bg-white text-dark">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Category</th>
                            <th scope="col">Offer %</th>
                            <th scope="col">Start</th>
                            <th scope="col">Expiry</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each CatOffers}}
                        <tr>
                            <th scope="row" class="fs-bold">{{inc @index}}</th>
                            <td>{{this.category}}</td>
                            <td>{{this.catOfferPercentage}} %</td>
                            <td>{{this.starting}}</td>
                            <td>{{this.expiry}}</td>

                            <td><a href="/admin/edit-catOffer/{{this._id}}"><i class="fas fa-edit fa-2x "></i></a></td>
                            <td class=""><a href="/admin/delete-catOffer/{{this._id}}"><i
                                        class="fa fa-trash fa-2x text-danger" aria-hidden="true"
                                        onclick="return confirm('Are you sure want to Delete {{this.name}} Category')"></i></a>
                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <section id="add" class="p-5">
            <div class="half">
                <div class="bg order-1 order-md-2" style="background-image: url('');"></div>
                <div class="contents order-2 order-md-1">
                    <div class="container">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-block" id="cat">
                                        <div class="text-center mb-5">
                                            <h3>Add new <strong>Category Offer</strong></h3>

                                        </div>

                                        <form action="/admin/category-offers" id="productPage" method="post">
                                            <div class="row">
                                                {{#if catOfferExist}}
                                                <div class="alert alert-danger">
                                                    <strong>{{catOfferExist}}</strong>
                                                </div>
                                                {{/if}}
                                            </div>
                                            <div class="form-group first">
                                                <label for="proList">Category List</label>
                                                <input list="products" name="category" class="form-control"
                                                    autocomplete="off" id="product">
                                                <datalist id="products">
                                                    {{#each allCategories}}
                                                    <option value="{{this.category}}">
                                                        {{/each}}
                                                </datalist>
                                                {{#if proErr}}
                                                <p class="text-center text-danger">{{proErr}}</p>
                                                {{/if}}
                                                <label class="pt-4">Starting Date</label>
                                                <input type="Date" class="form-control" required name="starting"
                                                    id="str">
                                                <label class="pt-4">Expiry Date</label>
                                                <input type="Date" class="form-control" required name="expiry" id="exp">
                                                <label class="pt-4">Offer Percentage</label>
                                                <input type="text" onkeypress="return isNumber(event)" min="1" max="95"
                                                    class="form-control" required name="catOfferPercentage">
                                            </div>
                                            <input type="submit" value="Add" id="prosub"
                                                class="btn btn-block btn-dark mt-3 ">
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

           
    </div>
</div>