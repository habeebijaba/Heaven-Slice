<div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
	<div class="container">
		<h1 class="page-title">Order Details</h1>
	</div><!-- End .container -->
</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav ">
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="/">Home</a></li>
			<li class="breadcrumb-item"><a href="/view-orders">orders</a></li>
			<li class="breadcrumb-item active" aria-current="page"><a href="#">order-details</a></li>
		</ol>
	</div><!-- End .container -->
</nav>
<div>
	<div class="card rounded-3 mb-4 container ">
		<div class="card-body p-4">
			<div class="row d-flex justify-content-between align-items-center">
				<div class="track ">
					<div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span
							class="text">Order confirmed</span>
						<p>{{orderDetails.date}}</p>
					</div>
					{{#if orderDetails.isShipped}}
					<div class="step active"> <span class="icon"> <i class="fa fa-ship"></i> </span> <span class="text">
							Shipped</span>
						<p>{{orderDetails.shippedDate}}</p>
					</div>
					{{/if}}
					{{#if orderDetails.isOutForDelivery}}
					<div class="step active"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span
							class="text"> Out for delivery</span>
						<p>{{orderDetails.outForDeliveryDate}}</p>
					</div>
					{{/if}}
					{{#if orderDetails.isDelivered}}
					<div class="step active"> <span class="icon"> <i class="fa fa-box"></i> </span> <span
							class="text">Delivered</span>
						<p>{{orderDetails.deliveredDate}}</p>
					</div>
					{{/if}}
					{{#if orderDetails.isCancelled}}
					<div class="step active  "> <span class="icon bg-danger "> <i class="fa fa-ban"></i> </span> <span
							class="text  "> Order Cancelled</span>
						<p>{{orderDetails.cancellDate}}</p>
					</div>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	<section class="h-100" style="background-color: #eee;">
		<div class="container h-100 ">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-10">
					{{#each orderProducts}}
					<div class="card rounded-3 mb-4  ">
						<div class="card-body p-4">
							<div class="row d-flex justify-content-between align-items-center">
								<div class="col-md-2 col-lg-2 col-xl-2  ">
									<img src="/product-images/{{this.product._id}}1.jpg" class="img-fluid rounded-3"
										alt="Cotton T-shirt">

								</div>
								<div class="col-md-3 col-lg-3 col-xl-3">
									<p class="lead fw-normal mb-2">{{this.product.name}}</p>
									<p><span class="text-muted">Quantity: {{this.quantity}}</span> </p>
								</div>

								<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
									<h5 class="mb-0">â‚¹{{this.product.price}}</h5>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</section>
</div>




