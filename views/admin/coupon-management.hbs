<link href="/assets/css/bootstrap-2.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="/assets/css/style3.css" rel="stylesheet">
<div class="container-fluid position-relative d-flex p-0">
    <div class="container-fluid" style="background-color: black;">
        <div class="row">
            <div class="col-12 col-lg-12 mt-5">
                <div class="container-fluid">
                    <div class="row">
                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"><u>Coupon management</u></p>
                    </div>
                </div>
                <table class="table" id="viewusers">
                    <thead class="bg-white text-dark">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Coupen Code</th>
                            <th scope="col">Offer %</th>
                            <th scope="col">Start</th>
                            <th scope="col">Expiry</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allCoupons}}
                        <tr>
                            <th scope="row" class="fs-bold">{{inc @index}}</th>
                            <td>{{this.coupon}}</td>
                            <td>{{this.offer}}</td>
                            <td>{{this.starting}}</td>
                            <td>{{this.expiry}}</td>
                            <td><a href="/admin/edit-coupon/{{this._id}}"><i class="fas fa-edit fa-2x "></i></a></td>
                            <td class=""><a href="/admin/delete-coupon/{{this._id}}"><i
                                        class="fa fa-trash fa-2x text-danger" aria-hidden="true"
                                        onclick="return confirm('Are you sure want to Delete {{this.name}} Category')"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <section id="add" class="p-5">
            <div class="half">
                <div class="bg order-1 order-md-2" style="background-image: url('');"></div>
                <div class="contents order-2 order-md-1">
                    <div class="container">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-block" id="cat">
                                        <div class="text-center mb-5">
                                            <h3>Add new <strong>Coupon</strong></h3>
                                        </div>
                                    <form action="/admin/add-coupon" id="productPage" method="post">
                                        <div class="row">
                                            
                                                    {{#if couponExist}}
                                                    <div class="alert alert-danger">
                                                        <strong>{{couponExist}}</strong>
                                                    </div>
                                                    {{/if}}
                                                </div>
                                        <div class="form-group first">
                                            <label>Coupon code</label>
                                            <input type="text" class="form-control" required name="coupon">
                                            <label class="pt-4">Minimum Purchase</label>
                                            <input type="text" class="form-control" required name="minimunPurchase">
                                            <label class="pt-4">Starting Date</label>
                                            <input type="Date" class="form-control" required name="starting" id="str">
                                            <label class="pt-4">Expiry Date</label>
                                            <input type="Date" class="form-control" required name="expiry" id="exp">
                                            <label class="pt-4">Coupon Percentage</label>
                                            <input type="text" class="form-control" required min="1" name="offer"
                                                max="95" {{!-- onkeypress="return isNumber(event)/" --}}>
                                        </div>
                                        <input type="submit" value="Add" id="prosub"
                                            class="btn btn-block btn-dark mt-3 ">
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </section>

       
</div>
</div>